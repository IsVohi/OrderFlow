{
  "name": "orderflow",
  "version": "1.0.0",
  "private": true,
  "description": "OrderFlow - Distributed Order Processing System",
  "scripts": {
    "build": "pnpm --filter './packages/*' build && pnpm --filter './apps/*' build",
    "test": "pnpm --recursive test",
    "test:e2e": "pnpm --filter './apps/*' test:e2e",
    "test:chaos": "jest --config test/config/jest.chaos.config.ts",
    "test:chaos:payment": "jest --config test/config/jest.chaos.config.ts --testPathPattern=payment-failure",
    "test:chaos:crash": "jest --config test/config/jest.chaos.config.ts --testPathPattern=service-crash",
    "test:chaos:lag": "jest --config test/config/jest.chaos.config.ts --testPathPattern=kafka-lag",
    "test:chaos:idempotency": "jest --config test/config/jest.chaos.config.ts --testPathPattern=idempotency",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive exec tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "dev:gateway": "pnpm --filter api-gateway dev",
    "dev:order": "pnpm --filter order-service dev",
    "dev:inventory": "pnpm --filter inventory-service dev",
    "dev:payment": "pnpm --filter payment-service dev",
    "dev:auth": "pnpm --filter auth-service dev",
    "dev:dashboard": "pnpm --filter dashboard dev",
    "docker:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker/docker-compose.yml logs -f",
    "prisma:generate": "pnpm --filter './apps/*' prisma:generate",
    "prisma:migrate": "pnpm --filter './apps/*' prisma:migrate:dev"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}