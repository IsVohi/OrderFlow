# Inventory Service Environment Variables

# Server
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=postgresql://orderflow:orderflow@localhost:5432/orderflow_inventory

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=inventory-service

# Logging
LOG_LEVEL=info

# Chaos Testing (disabled by default)
CHAOS_MODE_ENABLED=false
CHAOS_CRASH_PROBABILITY=0.0
CHAOS_LATENCY_MS=0
CHAOS_KAFKA_PROCESSING_DELAY_MS=0
CHAOS_KAFKA_PAUSE_PROBABILITY=0.0
CHAOS_KAFKA_PAUSE_DURATION_MS=0
CHAOS_DB_FAILURE_RATE=0.0
CHAOS_DB_TIMEOUT_MS=0
