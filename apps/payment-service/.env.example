PORT=3003
NODE_ENV=development
LOG_LEVEL=info
APP_VERSION=1.0.0

DATABASE_URL="postgresql://orderflow:dev_password@localhost:5434/orderflow_payment?schema=public"

REDIS_HOST=localhost
REDIS_PORT=6379

KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=payment-service-group
KAFKA_CLIENT_ID=payment-service

# Payment Gateway Configuration
PAYMENT_GATEWAY_PROVIDER=mock
PAYMENT_GATEWAY_FAILURE_RATE=0.0
PAYMENT_GATEWAY_FAILURE_TYPE=card_declined
PAYMENT_GATEWAY_LATENCY_MS=0
PAYMENT_GATEWAY_ALWAYS_FAIL_PREFIX=

# Chaos Testing (disabled by default)
CHAOS_MODE_ENABLED=false
CHAOS_CRASH_PROBABILITY=0.0
CHAOS_LATENCY_MS=0
CHAOS_KAFKA_PROCESSING_DELAY_MS=0
CHAOS_KAFKA_PAUSE_PROBABILITY=0.0
CHAOS_KAFKA_PAUSE_DURATION_MS=0
CHAOS_DB_FAILURE_RATE=0.0
CHAOS_DB_TIMEOUT_MS=0
CHAOS_PAYMENT_FAILURE_RATE=0.2

# Retry Configuration
PAYMENT_MAX_RETRIES=3
PAYMENT_RETRY_BACKOFF_BASE_MS=1000
BACKOFF_BASE_MS=1000

# Outbox Configuration
OUTBOX_POLL_INTERVAL_MS=5000
OUTBOX_BATCH_SIZE=100
