# OrderFlow Infrastructure Environment Variables
# Copy this file to .env and customize values for your environment

# Database credentials (used by all PostgreSQL instances)
DB_USER=orderflow
DB_PASSWORD=your_secure_password_here

# Grafana credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# CORS origin (for backend services)
CORS_ORIGIN=http://localhost:3001

# Kafka configuration
KAFKA_BROKERS=localhost:9092

# Service ports (defaults)
# ORDER_SERVICE_PORT=3001  # Note: Dashboard also uses 3001
# INVENTORY_SERVICE_PORT=3002
# PAYMENT_SERVICE_PORT=3003
